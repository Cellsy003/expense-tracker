<!DOCTYPE html>
<html lang="en">
<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <title>Weekly Expenses Report</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center">Weekly Expenses Report</h1>

        <!-- Display the date range -->
        <h3 class="text-center">From: <%= formattedStart %> to <%= formattedEnd %></h3>

        <!-- Display the expenses table -->
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= expense.description %></td>
                        <td><%= expense.amount %></td>
                        <td><%= expense.formattedDate %></td> <!-- Use the formatted date here -->
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Display total -->
        <h3 class="text-center">Total Expenses: â‚¦<%= total.toFixed(2) %></h3>

        <!-- Button to download the report as PDF -->
        <div class="text-center mt-4">
            <a href="/expenses/download-weekly-report" class="btn btn-primary">Download as PDF</a>
        </div>

        <!-- Back to Expenses List -->
        <div class="mt-4 text-center">
            <a href="/expenses" class="btn btn-secondary">Back to Expenses List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
